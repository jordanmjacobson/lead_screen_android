<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dip"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/first"
                android:textStyle="bold"
                android:layout_marginBottom="30dip"
                android:typeface="normal">

            </TextView>
            <Button
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Who, How, When to Screen"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
            <Button
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Manage Lead Levels"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
            <Button
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signs/Symptoms Lead Poisoning"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
            <Button
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lead Exposure Risk Survey"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
            <Button
                android:id="@+id/fifth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High Lead Evaluation"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
            <Button
                android:id="@+id/sixth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Differing Guidelines"
                app:textAllCaps="false"
                android:textSize="18sp">
            </Button>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>